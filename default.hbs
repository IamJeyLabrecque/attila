<!DOCTYPE html>
<html lang="{{@site.lang}}">
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

	<title>{{meta_title}}</title>

	<meta name="HandheldFriendly" content="True" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

	<link rel="stylesheet" type="text/css" href="{{asset "css/style.css"}}" />

	{{ghost_head}}

	<style>
		:root {
			--color-primary: #6da24a;
		  --color-primary-active: #51862f;
		}
	</style>

	<!-- Google Tag Manager -->
	<script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
	new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
	j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
	'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
	})(window,document,'script','dataLayer','GTM-KFCRVHT');</script>
	<!-- End Google Tag Manager -->
</head>

<body class="{{body_class}}">

	<!-- Google Tag Manager (noscript) -->
	<noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-KFCRVHT"
	height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
	<!-- End Google Tag Manager (noscript) -->

	<div class="nav-header">
		<nav class="nav-wrapper" aria-label="{{t "Main"}}">
				{{#if @site.logo}}
				<span class="logo">
					<a href="{{@site.url}}" title="{{t "Home"}}"><img src="{{@site.logo}}" alt="{{t "Logo"}}" /></a>
				</span>
				{{/if}}
				{{navigation}}
				<ul class="nav-side">
					{{#if @site.twitter}}
					<li class="nav-twitter"><a aria-label="Twitter" href="https://twitter.com/iamjeylabrecque" title="Twitter" target="_blank"><i class="icon icon-twitter" aria-hidden="true"></i></a></li>
					{{/if}}
					{{#if @site.facebook}}
					<li class="nav-linkedin"><a aria-label="LinkedIn" href="https://www.linkedin.com/in/iamjeylabrecque" title="LinkedIn" target="_blank"><i class="icon icon-linkedin" aria-hidden="true"></i></a></li>
					{{/if}}
					{{#if @labs.subscribers}}
					<li class="nav-subscribe"><a title="{{t "Subscribe"}}" href="{{@site.url}}/subscribe/" target="_blank"><i class="icon icon-mail" aria-hidden="true"></i></a></li>
					{{/if}}
					<li class="nav-search" style="display: none;"><a title="{{t "Search"}}"><i class="icon icon-search" aria-hidden="true"></i></a></li>
				</ul>
		</nav>

		<div class="nav-wrapper-control">
			<div class="inner">
				<a class="nav-menu" role="button"><i class="icon icon-menu" aria-hidden="true"></i>{{t "Menu"}}</a>
				<a class="nav-search" style="display: none;" title="{{t "Search"}}" role="button"><i class="icon icon-search" aria-hidden="true"></i></a>
			</div>
		</div>
	</div>
	<div class="nav-close" role="button" aria-label="{{t "Close"}}"></div>

	<section class="page-wrapper">

		{{{body}}}

		<div id="search" class="container">
			<div class="content">
				<div class="blog-header">
					<div class="inner">
						<div class="archive archive-search box archive-box">
							<span class="archive-info">
								<span class="archive-type">{{t "Archive"}}</span>
							</span>
							<h2 class="archive-title">{{t "Search"}}</h2>
							<form class="search">
								<input type="text" id="search-field" placeholder="{{t "Search all posts"}}&#8230;" />
								<input type="submit" value="{{t "Search"}}" />
							</form>
							<div id="topics">
								<span class="archive-info">
									<span class="archive-type">{{t "Archive"}}</span>
								</span>
								<h2 class="archive-title">{{t "Topics"}}</h2>
								<span class="post-tags archive-taglist">
									{{#get 'tags' limit='all' include='count.posts' order='count.posts desc'}}
										{{#foreach tags}}
											<a href='{{ url }}'>{{ name }}: {{ count.posts }}</a>
										{{/foreach}}
									{{/get}}
								</span>
							</div>
						</div>
					</div>
				</div>
				<div id="results"></div>
			</div>
			<div class="search-close"></div>
		</div>

		<div class="nav-footer">
			<nav class="nav-wrapper" aria-label="{{t "Footer"}}">
				{{#if @site.secondary_navigation}}
				{{navigation type="secondary"}}
				{{else}}
				<span class="nav-copy">:)</span>
				{{/if}}
				<span class="nav-credits">Jeffrey Labrecque &copy; {{date format='YYYY'}}</span>
			</nav>
		</div>

	</section>

	{{!-- Load basic scripts --}}
	<script type="text/javascript" src="{{asset "js/script.js"}}"></script>

	{{!-- Force External Links to open in a new tab --}}
	<script type="text/javascript">
		jQuery(document.links).filter(function() {
			return this.hostname != window.location.hostname;
		}).attr('target', '_blank').attr('rel', 'noopener noreferrer');;
	</script>

	{{!-- Load scripts from other template files --}}
	{{{block "scripts"}}}

	{{ghost_foot}}

</body>
</html>
